# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
#
# Mailboxes to watch for new mail
#
#	mailboxes <path1> [ <path2> ... ]
#

# shell out and create a list of mailboxes
 mailboxes ! + `\
    for file in ~/Maildir/.*; do \
	box=$(basename "$file"); \
	if [ ! "$box" = '.' -a ! "$box" = '..' -a ! "$box" = '.customflags' \
		-a ! "$box" = '.subscriptions' ]; then \
	    echo -n "\"+$box\" "; \
	fi; \
    done`

